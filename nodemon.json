{
  "name": "GraphQL-Explorer-Server",
  "restartable": "r",
  "delay": "500",
  "ignore": [
    ".git",
    "node_modules/**",
    "server/logs",
    "server/generated/",
    "server/entity/factories/",
    "server/entity/seeds/",
    "/**/*.json",
    "/**/*.graphql",
    "/**/*.gql"
  ],
  "verbose": true,
  "execMap": {
    "": "node",
    "js": "node --harmony",
    "ts": "ts-node "
  },
  "ext": "js json ts db",
  "watch": ["./server/**/*.ts"],
  "legacy-watch": false
}
